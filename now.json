{
  "version": 2,
  "builds": [
    { "src": "ui/next.config.js", "use": "@now/next" },
    { "src": "api/index.js", "use": "@now/node" }
  ],
  "routes": [
    { "src": "/api", "dest": "/api/index.js" },
    { "src": "/(.*)", "dest": "/ui/$1", "continue": true }
  ],
  "regions": ["bru1"],
  "env": {
    "MONGO_URL": "@selfwriter-mongodb-uri",
    "MAILGUN_API_KEY": "faulty",
    "JWT_SECRET": "@selfwriter-jwt-secret"
  },
  "scope": "gustav"
}
